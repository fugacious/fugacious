
{
  "name": "Fugacious",
  "description": "open source short-term secure messaging solution",
  "website": "https://fugacio.us",
  "repository": "https://github.com/fugacious/fugacious",
  "logo": "https://raw.githubusercontent.com/fugacious/fugacious/dev/app/assets/images/logo-small.png",
  "scripts": {
    "postdeploy": "bundle exec rake db:migrate"
  },
  "env": {
    "RAILS_ENV": "production",
    "RACK_ENV": "production",
    "RAILS_SERVE_STATIC_FILES": "true",
    "MAX_RETENTION_HOURS": "480"
  },
  "addons": ["heroku-postgresql"]
}
